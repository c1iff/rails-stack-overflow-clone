<h4> <%= @question.content %> </h4>
<h4> <%= @question.rating %> </h4>
<h4> <%= @question.user.email %> </h4>
<% if @question.answers %>
  <% @question.answers.each do |answer|  %>
    <p>
      <%= answer.content%>
      <%= answer.user.email %>
      <%= answer.rating %>
    </p>
  <% end %>
<% end %>
<br>
<%= link_to "Add an Answer", new_question_answer_path(@question) %>
